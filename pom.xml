<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.nextbreakpoint.nextfractal</groupId>
	<artifactId>com.nextbreakpoint.nextfractal.parent</artifactId>
	<version>1.3.0</version>
	<packaging>pom</packaging>
	<url>https://github.com/nextbreakpoint/nextfractal</url>
	<licenses>
		<license>
			<name>GPL 3</name>
			<url>http://nextbreakpoint.com/licenses/GPLv3</url>
		</license>
	</licenses>
	<developers>
		<developer>
			<name>Andrea Medeghini</name>
			<email>andrea@nextbreakpoint.com</email>
		</developer>
	</developers>
	<scm>
		<connection>scm:git:git@github.com:nextbreakpoint/nextfractal.git</connection>
		<developerConnection>scm:git:git@github.com:nextbreakpoint/nextfractal.git</developerConnection>
		<url>scm:git:git@github.com:nextbreakpoint/nextfractal.git</url>
	</scm>
	<modules>
		<module>com.nextbreakpoint.nextfractal.core</module>
		<module>com.nextbreakpoint.nextfractal.mandelbrot</module>
		<module>com.nextbreakpoint.nextfractal.contextfree</module>
		<module>com.nextbreakpoint.nextfractal.runtime</module>
		<module>com.nextbreakpoint.nextfractal.server</module>
		<module>com.nextbreakpoint.nextfractal.main</module>
	</modules>
	<properties>
		<antlr4.version>4.5.3</antlr4.version>
		<richtext.version>0.6.10</richtext.version>
		<commonmath3.version>3.5</commonmath3.version>
		<ffmpeg4java.version>3.1.1-1.0</ffmpeg4java.version>
		<freeimage4java.version>3.18.0-1.1</freeimage4java.version>
		<try.version>2.0.3</try.version>
		<springboot.version>1.2.3.RELEASE</springboot.version>
		<jackson.version>2.6.3</jackson.version>
		<junit4.version>4.11</junit4.version>
		<mockito.version>1.9.5</mockito.version>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-source-plugin</artifactId>
				<version>3.0.1</version>
				<executions>
					<execution>
						<id>attach-sources</id>
						<goals>
							<goal>jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<!--
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
				<version>2.10.4</version>
				<executions>
					<execution>
						<id>attach-javadocs</id>
						<goals>
							<goal>jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			-->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.3</version>
				<configuration>
					<source>1.8</source>
					<target>1.8</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.16</version>
			</plugin>
		</plugins>
	</build>
	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>org.antlr</groupId>
				<artifactId>antlr4-runtime</artifactId>
				<version>${antlr4.version}</version>
			</dependency>
			<dependency>
				<groupId>org.fxmisc.richtext</groupId>
				<artifactId>richtextfx</artifactId>
				<version>${richtext.version}</version>
			</dependency>
			<dependency>
				<groupId>org.apache.commons</groupId>
				<artifactId>commons-math3</artifactId>
				<version>${commonmath3.version}</version>
			</dependency>
			<dependency>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-starter-web</artifactId>
				<version>${springboot.version}</version>
			</dependency>
			<dependency>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-starter-actuator</artifactId>
				<version>${springboot.version}</version>
			</dependency>
			<dependency>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-starter-test</artifactId>
				<version>${springboot.version}</version>
				<scope>test</scope>
			</dependency>
			<dependency>
				<groupId>com.nextbreakpoint</groupId>
				<artifactId>com.nextbreakpoint.ffmpeg4java</artifactId>
				<version>${ffmpeg4java.version}</version>
			</dependency>
			<dependency>
				<groupId>com.nextbreakpoint</groupId>
				<artifactId>com.nextbreakpoint.freeimage4java</artifactId>
				<version>${freeimage4java.version}</version>
			</dependency>
			<dependency>
				<groupId>com.nextbreakpoint</groupId>
				<artifactId>com.nextbreakpoint.try</artifactId>
				<version>${try.version}</version>
			</dependency>
			<dependency>
				<groupId>com.fasterxml.jackson.core</groupId>
				<artifactId>jackson-databind</artifactId>
				<version>${jackson.version}</version>
			</dependency>
			<dependency>
				<groupId>org.mockito</groupId>
				<artifactId>mockito-all</artifactId>
				<version>${mockito.version}</version>
				<scope>test</scope>
			</dependency>
		</dependencies>
	</dependencyManagement>
	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>${junit4.version}</version>
			<scope>test</scope>
		</dependency>
	</dependencies>
	<profiles>
		<profile>
			<id>win32_x86_64</id>
			<properties>
				<build.type>win32_x86_64</build.type>
				<arch.type>x86_64</arch.type>
				<os.type>win32</os.type>
			</properties>
		</profile>
		<profile>
			<id>linux_x86_64</id>
			<properties>
				<build.type>linux_x86_64</build.type>
				<arch.type>x86_64</arch.type>
				<os.type>linux</os.type>
			</properties>
		</profile>
		<profile>
			<id>macos_x86_64</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<properties>
				<build.type>macos_x86_64</build.type>
				<arch.type>x86_64</arch.type>
				<os.type>macos</os.type>
			</properties>
		</profile>
	</profiles>
</project>